#!/usr/bin/env ruby

Version = "0.0.0"

require "optparse"
require "pp"

require "xxx"

options = {}

optparse = OptionParser.new do|opts|
  opts.banner = "Usage: xxx [options] command\n"

  opts.separator ""
  opts.separator "Available commands:"
  opts.separator "    latest (default)"

  opts.separator ""
  opts.separator "Specific options:"

  opts.on("-s", "--channel [CHANNEL]", [:youporn, :szukajcipki], "Select channel (youporn, szukajcipki)") do |channel|
    options[:channel] = channel
  end

  opts.on("-h", "--help", "Display this screen") do
    puts opts
    exit
  end
end

optparse.parse!

command = ARGV.shift || "latest"

Xxx.watch_porn(options[:channel], command)
