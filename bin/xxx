#!/usr/bin/env ruby

Version = "0.0.0"

require 'optparse'
require 'pp'

options = {}

optparse = OptionParser.new do|opts|
  opts.banner = "Usage: xxx [options] command\n"

  opts.separator ""
  opts.separator "Available commands:"
  opts.separator "    latest (default)"

  opts.separator ""
  opts.separator "Specific options:"

  opts.on("-s", "--source [SOURCE]", [:youporn, :szukajcipki], "Select source (youporn, szukajcipki)") do |source|
    options[:source] = source
  end

  opts.on("-h", "--help", "Display this screen") do
    puts opts
    exit
  end
end

optparse.parse!

command = ARGV.shift || "latest"

# pp "Options:", options
# pp "Command:", command
# pp "ARGV:", ARGV
